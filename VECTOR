#include <cstdlib>
#include <iostream>
using namespace std;
    class dynamicArray{
      public:
         dynamicArray( int initSize = 0 )
                : theSize( initSize) , theCapacity( initSize + 200 ),s(0)
                {
                       sayilar = new int[ theCapacity ];
                }
                int size() { return theCapacity; }
                void add(int x){
                     if(s==size())resize();
                     sayilar[s]=x;
                     s++;
                     }
                int resize(){
                    cout<<"----------------------------------"<<endl;
                    cout<<"yer degisimi yapiliyor............"<<endl;
                    cout<<"----------------------------------"<<endl;
                    int s=theSize;
                    int *eski_sayilar = sayilar;
                    sayilar = new int[theCapacity*2];
                    for( int k = 0; k<s; k++)
                     sayilar[k] = eski_sayilar[k];
                    
                    theSize = s;
                    theCapacity = theCapacity*2;
               }
      private:
              int theSize;
              int s;
              int theCapacity;
              int * sayilar;
      
      };



int main(int argc, char *argv[])
{
    dynamicArray myD = dynamicArray(500);
   
    for ( int k=0; k<10;k++)
         myD.add(4);
    cout<<myD.size()<<endl;
    
    
    system("PAUSE");
    return EXIT_SUCCESS;
}
